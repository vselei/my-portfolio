---
export interface Props {
  title: string;
  image: string;
}

const { title, image } = Astro.props;
---

<div class="card">
  <img width={60} height={60} src={`/img/${image}`} alt={`Soft skill de ${title}`} />
  <h3 class="card-title uppercase">{title}</h3>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    color: var(--gray-900);
    background-color: var(--white);
    padding: 2rem;
    text-align: center;
    justify-content: center;
    align-items: center;
    gap: 1.4rem;
    border-radius: 1rem;
  }

  .card-title {
    
  }
</style>
